    <view class="text-xl" bindtap='onLogin'>
    <navigator class="content" url="/pages/myself/login/login" hover-class="none">点击注册</navigator>
      <!-- <text class="text-df">v2.0</text> -->
    </view>
    <view class="margin-top-sm">
      <text>By:邓士鹏</text>
    </view>
    <image src="https://image.weilanwl.com/gif/wave.gif" mode="scaleToFill" class="gif-wave"></image>
  </view>
  <view class="padding flex text-center text-grey bg-white shadow-warp">
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-orange">{{visitTotal}}</view>
      <view class="margin-top-sm">
        <text class="icon-attentionfill"></text> 全部订单</view>
    </view>
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-blue">{{starCount}}</view>
      <view class="margin-top-sm">
        <text class="icon-favorfill"></text> 待收货</view>
    </view>
    <view class="flex flex-sub flex-direction">
      <view class="text-xxl text-green">{{forksCount}}</view>
      <view class="margin-top-sm">
        <text class="icon-fork"></text> 待评价</view>
    </view>
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
  <view class="cu-item arrow">
      <navigator class="content" url="/pages/myself/info/info" hover-class="none">
        <text class="icon-creativefill text-orange"></text>
        <text class="text-grey">个人信息</text>
      </navigator>
    </view>


    <view class="cu-item arrow">
      <view class="content" bindtap="CopyLink" data-link="https://www.cnblogs.com/vip-deng-vip/p/8214091.html">
        <text class="icon-github text-grey"></text>
        <text class="text-grey">GitHub</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/myself/about/about" hover-class="none">
        <image src="/images/logo.png" class="png" mode="aspectFit"></image>
        <text class="text-grey">关于ColorUI组件库</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/myself/log/log" hover-class="none">
        <text class="icon-formfill text-green"></text>
        <text class="text-grey">日志</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <view class="content" >
        <text class="icon-appreciatefill text-red"></text>
        <text class="text-grey">赞赏支持</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <button class="cu-btn content" open-type="feedback">
        <text class="icon-writefill text-cyan"></text>
        <text class="text-grey">意见反馈</text>
      </button>
    </view>
    
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>